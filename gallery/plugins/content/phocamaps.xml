<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install type="plugin" group="content" method="upgrade" version="1.5.0">
	<name>Phoca Maps Plugin</name>
	<creationDate>10/03/2010</creationDate>
	<author>Jan Pavelka (www.phoca.cz)</author>
	<authorEmail></authorEmail>
	<authorUrl>www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>1.1.0</version>
	<!-- The description is optional and defaults to the name -->

	<description><![CDATA[ 
       Phoca Maps Plugin - displays Phoca Maps in article<br />
       More information on <a href="http://www.phoca.cz" target="_blank" >www.phoca.cz</a>  
      ]]></description>

	<!-- Main File Copy Section -->
	<files>
		<filename plugin="phocamaps">phocamaps.php</filename>
		<filename plugin="phocamaps">phocamaps.xml</filename>
	</files>

	<!-- Language -->
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_phocamaps.ini</language>
	</languages>
	<administration>
		<languages>
			<language tag="en-GB">language/en-GB/en-GB.plg_content_phocamaps.ini</language>
		</languages>
	</administration>
	
	<params addpath="/administrator/components/com_phocamaps/elements">
		<param name="display_map_description" type="list" default="0" label="Display Map Description" description="Display Map Description DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="detail_window" type="list" default="0" label="Detail Window" description="Detail Window Desc">
			<option value="1">Standard Popup Window</option>
			<option value="0">Modal Popup Box</option>
		</param>
		
		<param name="modal_box_overlay_color" default="#000000" size="10" type="phocacolortext" label="Modal Box Overlay Color" description="Modal Box Overlay Color DESC" />
		<param name="modal_box_overlay_opacity" default="0.3" size="10" type="list" label="Modal Box Overlay Opacity" description="Modal Box Overlay Opacity DESC" >
		<option value="0">0 %</option>
		<option value="0.1">10 %</option>
		<option value="0.2">20 %</option>
		<option value="0.3">30 %</option>
		<option value="0.4">40 %</option>
		<option value="0.5">50 %</option>
		<option value="0.6">60 %</option>
		<option value="0.7">70 %</option>
		<option value="0.8">80 %</option>
		<option value="0.9">90 %</option>
		<option value="1">100 %</option>
		
		</param>
		<param name="modal_box_border_color" default="#6b6b6b" size="10" type="phocacolortext" label="Modal Box Border Color" description="Modal Box Border Color DESC" />
		<param name="modal_box_border_width" default="2" size="10" type="phocatext" label="Modal Box Border Width" description="Modal Box Border Width DESC" />

		
	</params>

</install>
